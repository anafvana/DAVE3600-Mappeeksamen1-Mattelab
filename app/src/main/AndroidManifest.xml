<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.s344036.mattelab">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MatteLab">
        <activity
            android:name="com.s344036.mattelab.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.s344036.mattelab.PlayActivity"
            android:parentActivityName="com.s344036.mattelab.MainActivity"
            android:exported="true">
        </activity>
        <activity android:name="com.s344036.mattelab.StatsActivity"
            android:parentActivityName="com.s344036.mattelab.MainActivity"
            android:exported="true">
        </activity>
        <activity android:name="com.s344036.mattelab.PreferencesActivity"
            android:parentActivityName="com.s344036.mattelab.MainActivity"
            android:theme="@style/PreferenceScreen"
            android:exported="true">
        </activity>
    </application>

</manifest>