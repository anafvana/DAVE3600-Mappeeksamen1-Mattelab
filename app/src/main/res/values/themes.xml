<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MatteLab" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/red_800</item>
        <item name="colorPrimaryVariant">@color/red_200</item>
        <item name="colorOnPrimary">@color/red_100</item>
        <item name="android:windowBackground">@drawable/background</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
        <item name="android:colorAccent">@color/red_800</item>
        <item name="android:textColorSecondary">@color/red_500</item>
        <item name="android:textColorTertiary">@color/black</item>
    </style>

    <!--Placeholder for versions under 23; assures parent theme will be used-->
    <style name="PreferenceScreen" parent="Theme.MatteLab"/>
</resources>