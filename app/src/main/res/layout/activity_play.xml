<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    tools:context=".MainActivity"
    tools:ignore="HardcodedText"
    >

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_play"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        >

        <ImageView
            android:id="@+id/img_play_back"
            android:src="@drawable/vector_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="@string/app_name"
            style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
            />
    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:id="@+id/txt_play_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/marg_btn"
        android:textAlignment="center"
        android:text="test"
        android:textSize="@dimen/txt_size_850"
        android:textFontWeight="800"
        />

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:layout_marginBottom="@dimen/marg_btn"
    >
    <TextView
        android:id="@+id/txt_play_answer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textAlignment="center"
        android:text="@string/str_play_answer"
        android:layout_marginBottom="@dimen/marg_btn"
        android:textSize="@dimen/txt_size_800"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        >
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_play_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/marg_btn"
            android:layout_marginRight="@dimen/marg_btn"
            android:textSize="@dimen/txt_size_600"
            android:textColor="@color/black"
            app:strokeColor="@color/red_500"
            app:strokeWidth="3dp"
            app:cornerRadius="5dp"
            android:backgroundTint="@color/red_200"
            android:text="1" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_play_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/marg_btn"
            android:layout_marginRight="@dimen/marg_btn"
            android:textSize="@dimen/txt_size_600"
            android:textColor="@color/black"
            app:strokeColor="@color/red_500"
            app:strokeWidth="3dp"
            app:cornerRadius="5dp"
            android:backgroundTint="@color/red_200"
            android:text="2"
            />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_play_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/marg_btn"
            android:layout_marginRight="@dimen/marg_btn"
            android:textSize="@dimen/txt_size_600"
            android:textColor="@color/black"
            app:strokeColor="@color/red_500"
            app:strokeWidth="3dp"
            app:cornerRadius="5dp"
            android:backgroundTint="@color/red_200"
            android:text="3"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        >
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_play_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/marg_btn"
            android:layout_marginRight="@dimen/marg_btn"
            android:textSize="@dimen/txt_size_600"
            android:textColor="@color/black"
            app:strokeColor="@color/red_500"
            app:strokeWidth="3dp"
            app:cornerRadius="5dp"
            android:backgroundTint="@color/red_200"
            android:text="4"
            />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_play_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/marg_btn"
            android:layout_marginRight="@dimen/marg_btn"
            android:textSize="@dimen/txt_size_600"
            android:textColor="@color/black"
            app:strokeColor="@color/red_500"
            app:strokeWidth="3dp"
            app:cornerRadius="5dp"
            android:backgroundTint="@color/red_200"
            android:text="5"
            />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_play_6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/marg_btn"
            android:layout_marginRight="@dimen/marg_btn"
            android:textSize="@dimen/txt_size_600"
            android:textColor="@color/black"
            app:strokeColor="@color/red_500"
            app:strokeWidth="3dp"
            app:cornerRadius="5dp"
            android:backgroundTint="@color/red_200"
            android:text="6"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        >
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_play_7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/marg_btn"
            android:layout_marginRight="@dimen/marg_btn"
            android:textSize="@dimen/txt_size_600"
            android:textColor="@color/black"
            app:strokeColor="@color/red_500"
            app:strokeWidth="3dp"
            app:cornerRadius="5dp"
            android:backgroundTint="@color/red_200"
            android:text="7"
            />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_play_8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/marg_btn"
            android:layout_marginRight="@dimen/marg_btn"
            android:textSize="@dimen/txt_size_600"
            android:textColor="@color/black"
            app:strokeColor="@color/red_500"
            app:strokeWidth="3dp"
            app:cornerRadius="5dp"
            android:backgroundTint="@color/red_200"
            android:text="8"
            />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_play_9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/marg_btn"
            android:layout_marginRight="@dimen/marg_btn"
            android:textSize="@dimen/txt_size_600"
            android:textColor="@color/black"
            app:strokeColor="@color/red_500"
            app:strokeWidth="3dp"
            app:cornerRadius="5dp"
            android:backgroundTint="@color/red_200"
            android:text="9"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        >
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_play_erase"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/marg_btn"
            android:layout_marginRight="@dimen/marg_btn"
            android:textSize="@dimen/txt_size_600"
            android:textColor="@color/black"
            app:strokeColor="@color/red_500"
            app:strokeWidth="3dp"
            app:cornerRadius="5dp"
            android:backgroundTint="@color/red_200"
            android:text="&lt;&lt;"
            />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_play_0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/marg_btn"
            android:layout_marginRight="@dimen/marg_btn"
            android:textSize="@dimen/txt_size_600"
            android:textColor="@color/black"
            app:strokeColor="@color/red_500"
            app:strokeWidth="3dp"
            app:cornerRadius="5dp"
            android:backgroundTint="@color/red_200"
            android:text="0"
            />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_play_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/marg_btn"
            android:layout_marginRight="@dimen/marg_btn"
            android:textSize="@dimen/txt_size_600"
            android:textColor="@color/white"
            app:strokeColor="@color/red_500"
            app:strokeWidth="3dp"
            app:cornerRadius="5dp"
            android:backgroundTint="@color/red_500"
            android:text="OK"
            />

    </LinearLayout>
</LinearLayout>

</LinearLayout>
